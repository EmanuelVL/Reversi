void ResetBoard(board)
{
    for(int x = 0; x < 8; ++x)
        for(int y = 0; y < 8; ++y)
            board[x][y] = ' ';
            
    board[3][3] = 'X';
    board[3][4] = 'O';
    board[4][3] = 'O';
    board[4][4] = 'X';
}

bool playAgain()
{
    char seleccion;
    cout << "\168Quieres jugar otra vez? [s/n]: ";
    cin >> seleccion;
    if(seleccion = 's' || seleccion = 'y')
        return true;
    else return false;
}
