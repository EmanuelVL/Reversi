    cout << "    1   2   3   4   5   6   7   8" << endl;
    cout << HLINE << endl;
    for(int y = 0; y < 8; ++y){
        cout << VLINE << endl;
        cout << y+1 << endl;
        for(int x = 0; x < 8; ++x)
            cout << "| " << board[x][y] << endl;
        cout << "|" << endl;
        cout << VLINE << endl;
